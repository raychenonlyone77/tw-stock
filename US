    <script>
        // æ‚¨çš„ CSV é€£çµ
        const csvUrl = 'https://docs.google.com/spreadsheets/d/e/2PACX-1vRnnycTiC2j4aZnKmJbN2KsdOfAl1lQe77SsaMede4h6w64XaXWA9IlvsvsqVxNl1XlVwkszhOfQjQ/pub?output=csv';

        async function fetchTradingData() {
            Papa.parse(csvUrl, {
                download: true,
                header: false,
                skipEmptyLines: true,
                complete: function(results) { processData(results.data.slice(1)); }
            });
        }

        function processData(data) {
            let ohlc = [];
            let tsmcLine = [];
            let records = [];
            let totalTR20 = 0;
            let totalTR5 = 0;

            for (let i = 0; i < Math.min(21, data.length - 1); i++) {
                let curr = data[i], prev = data[i+1];
                let dateStr = curr[0], o = parseFloat(curr[1]), h = parseFloat(curr[2]), l = parseFloat(curr[3]), c = parseFloat(curr[4]), tsmcC = parseFloat(curr[5]), pc = parseFloat(prev[4]);

                if (isNaN(o) || isNaN(h) || isNaN(l) || isNaN(c)) continue;

                ohlc.push({ x: dateStr.split(' ')[0], y: [o, h, l, c] });
                tsmcLine.push({ x: dateStr.split(' ')[0], y: tsmcC });

                let tr = Math.max(h, pc) - Math.min(l, pc);
                let trPct = ((tr / pc) * 100).toFixed(2);
                
                totalTR20 += tr;
                if (i < 5) totalTR5 += tr;

                records.push({ date: dateStr.split(' ')[0], o, c, h, l, tr, trPct, tsmcC });
            }

            const lastRec = records[0];
            const avgTR20 = totalTR20 / records.length;
            const avgTR5 = totalTR5 / 5;

            document.getElementById('tsmcPrice').innerText = `${lastRec.tsmcC} TWD`;
            document.getElementById('avgTR20').innerText = `${Math.round(avgTR20)} é»`;
            document.getElementById('avgTR5').innerText = `${Math.round(avgTR5)} é»`;
            document.getElementById('optionRange').innerText = `${Math.round(lastRec.c - avgTR5)} ï½ ${Math.round(lastRec.c + avgTR5)}`;

            renderChart(ohlc.reverse(), tsmcLine.reverse());
            renderTable(records);
        }

        function renderChart(ohlc, tsmc) {
            new ApexCharts(document.querySelector("#mainChart"), {
                series: [
                    { name: 'å¤§ç›¤ K ç·š', type: 'candlestick', data: ohlc },
                    { name: 'å°ç©é›»', type: 'line', data: tsmc }
                ],
                chart: { height: 400, toolbar: { show: false }, background: 'transparent' },
                theme: { mode: 'dark' },
                stroke: { width: [1, 2] },
                yaxis: [
                    { title: { text: 'åŠ æ¬ŠæŒ‡æ•¸' }, labels: { formatter: v => v.toFixed(0) } },
                    { opposite: true, title: { text: 'å°ç©é›»' } }
                ],
                plotOptions: { candlestick: { colors: { upward: '#f43f5e', downward: '#10b981' } } }
            }).render();
        }

        function renderTable(data) {
            const body = document.getElementById('tableBody');
            body.innerHTML = '';
            data.forEach(d => {
                let colorClass = d.trPct >= 1.05 ? 'class="alert-red"' : '';
                body.innerHTML += `<tr>
                    <td>${d.date}</td>
                    <td>${Math.round(d.o)} / ${Math.round(d.c)}</td>
                    <td>${d.tsmcC}</td>
                    <td ${colorClass}>${Math.round(d.tr)}é»</td>
                    <td ${colorClass}>${d.trPct}%</td>
                </tr>`;
            });
        }

        fetchTradingData();
    </script>
</body>
